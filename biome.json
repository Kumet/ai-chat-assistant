{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"files": {
		"ignore": ["apps/api/**", "node_modules/**", "dist/**", ".next/**"]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	}
}
